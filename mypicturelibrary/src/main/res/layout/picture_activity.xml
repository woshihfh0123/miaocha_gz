<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my25dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/my50dp"
            android:layout_height="@dimen/my50dp"
            android:padding="@dimen/my15dp"
            android:src="@drawable/back_jiantou"
            android:tint="#fff" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5" android:textSize="@dimen/my17sp"
            android:textColor="#fff" />
    </LinearLayout>

    <ImageView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/my20dp"
        android:src="@drawable/download"
        android:tint="#fff" />
</RelativeLayout>