<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent" android:gravity="center">


        <ImageView android:id="@+id/type_img"
            android:layout_width="@dimen/my135dp"
            android:layout_height="@dimen/my125dp"
            android:src="@mipmap/area_apply_success"/>

        <TextView android:id="@+id/type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" android:layout_marginTop="@dimen/my20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/my23dp"
            android:text="申请审核成功"/>
        <TextView android:id="@+id/type_detail"
            android:layout_width="wrap_content" android:gravity="center"
            android:layout_height="wrap_content" android:lineSpacingExtra="5dp"
            android:textStyle="normal" android:layout_marginTop="@dimen/my10dp"
            android:textColor="@color/gray1"
            android:textSize="@dimen/my15dp"
            android:text="恭喜您，成为城市代理商"/>

        <TextView android:id="@+id/type_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal" android:layout_marginTop="@dimen/my80dp"
            android:textColor="@color/white"
            android:textSize="@dimen/my16dp" android:background="@drawable/address_submit_bg"
            android:text="重新填写"
            android:paddingTop="@dimen/my15dp" android:paddingBottom="@dimen/my15dp"
            android:paddingLeft="@dimen/my50dp" android:paddingRight="@dimen/my50dp"/>


    </LinearLayout>
</LinearLayout>