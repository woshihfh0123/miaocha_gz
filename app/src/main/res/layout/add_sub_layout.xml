<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/my22dp"
    android:divider="@drawable/divider_horizontal"
    android:background="@drawable/gwc_gray_zj_full_shape"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ic_minus"
        android:layout_width="@dimen/addsubutils_btn_width"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/my5dp"
        android:scaleType="centerInside"
        android:src="@drawable/addsubutils_ic_minus" />
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray3"/>
    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:gravity="center"
        android:singleLine="true"
        android:background="@null"
        android:inputType="number"
        android:minWidth="@dimen/my35dp"

        android:text="1"
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/addsubutils_textsize"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray3"/>

    <ImageView
        android:id="@+id/ic_plus"
        android:layout_width="@dimen/addsubutils_btn_width"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/my5dp"
        android:scaleType="centerInside"
        android:src="@drawable/addsubutils_ic_plus" />
</LinearLayout>