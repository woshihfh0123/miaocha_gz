<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#f5f5f5"
              android:orientation="vertical">

    <include layout="@layout/view_white_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/my0.5dp"
        android:background="@color/gray3"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

    <com.mc.phonelive.views.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/my10dp"
       >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="@dimen/my5dp"
            android:paddingRight="@dimen/my5dp"
            />
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/my45dp"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="@dimen/my30dp"
                    android:layout_height="@dimen/my0.5dp"
                    android:background="@color/gray3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/my10dp"
                    android:src="@drawable/sc_left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/my10dp"
                    android:src="@drawable/sc_left"/>
                <View
                    android:layout_width="@dimen/my30dp"
                    android:layout_height="@dimen/my0.5dp"
                    android:background="@color/gray3"/>

            </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            />
    </RelativeLayout>
        </LinearLayout>
    </com.mc.phonelive.views.MyScrollview>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>