<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my250dp"
        android:background="@color/main_orange_color"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/my35dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/my16dp"
        android:textStyle="bold"
        android:text="T试了的积分的"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/my10dp"
        android:gravity="bottom"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my20dp"
            android:text="480"
            android:textColor="#eb1018"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="积分"
            android:textColor="#fc625e"
            android:textSize="@dimen/my13dp"
            />
        <TextView
            android:id="@+id/tv_ys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my12dp"
            android:textColor="#999999"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/my10dp"
    android:background="#f5f5f5"/>
    <LinearLayout
        android:id="@+id/ll_ys"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my40dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my12dp"
            android:textColor="#999999"
            android:text="已选"
            />
        <TextView
            android:id="@+id/tv_yx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my14dp"
            android:paddingLeft="@dimen/my15dp"
            android:textColor="#222222"
            android:text="1"

            />
        <ImageView
            android:layout_width="@dimen/my15dp"
            android:layout_height="@dimen/my15dp"
           android:src="@mipmap/right_icon"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my45dp"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_vertical"

        android:textSize="@dimen/my14sp"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:text="商品详情"
        android:textColor="#222222"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/my50dp"/>
</RelativeLayout>
    </LinearLayout>
<ImageView
    android:id="@+id/iv_back"
    android:layout_width="@dimen/my50dp"
    android:layout_height="@dimen/my50dp"
    android:src="@drawable/back_jiantou"
    android:padding="@dimen/my15dp"
    android:layout_marginTop="@dimen/my25dp"
    android:tint="@color/black"/>
    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/my30dp"
        app:cardElevation="@dimen/my0dp"
        app:cardPreventCornerOverlap="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/my20dp"
        android:layout_marginRight="@dimen/my20dp"
        android:layout_marginBottom="@dimen/my10dp"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/my20dp"
            android:background="@color/black"
            android:layout_weight="3">
<ImageView
    android:layout_width="@dimen/my12dp"
    android:layout_height="@dimen/my12dp"
    android:src="@drawable/jf_xtb"/>
            <TextView
                android:id="@+id/tv_jfz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my19dp"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/my5dp"
                android:text="480"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my12dp"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:paddingLeft="@dimen/my5dp"
                android:text="积分"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ljdh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/red"
            android:layout_weight="2">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/my14dp"
    android:textColor="@color/white"
    android:text="立即兑换"/>
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>