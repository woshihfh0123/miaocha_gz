<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/my1dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginTop="@dimen/my5dp"
        android:layout_marginBottom="@dimen/my5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/my10dp">


        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名" android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/my15sp" />
        <LinearLayout  android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="wrap_content"   android:layout_below="@+id/user_name_tv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间："
            android:textColor="@color/textColor"
            android:textSize="@dimen/my12sp" />
        <TextView
            android:id="@+id/user_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-01"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/my12sp" />
        <TextView android:layout_marginLeft="@dimen/my20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textColor="@color/textColor"
            android:textSize="@dimen/my12sp" />
        <TextView
            android:id="@+id/user_ordermoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/redlive"
            android:textSize="@dimen/my12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/user_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/my10dp"
            android:text="0元"
            android:textColor="@color/redlive"
            android:textSize="@dimen/my15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>