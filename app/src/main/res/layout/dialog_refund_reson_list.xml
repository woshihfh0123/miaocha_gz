<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my300dp"
    android:background="@drawable/btn_white_corner"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:gravity="center"
        android:text="选择退款理由"
        android:textColor="@color/black"/>

    <GridView
        android:id="@+id/reson_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:text="退款理由"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_below="@+id/title"
        android:visibility="visible"

        />

    <TextView
        android:id="@+id/cancledia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue_corner"
        android:layout_margin="@dimen/my16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="取消"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"/>
</RelativeLayout>