<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="5dp" android:layout_marginLeft="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/video_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp" app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.mc.phonelive.custom.RatioImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:src="@mipmap/icon_video_home_bottom"
            app:ri_ratio="0.48387" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/my5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true">
        <com.mc.phonelive.custom.DrawableTextView
            android:id="@+id/video_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:paddingBottom="8dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.mc.phonelive.custom.DrawableTextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:singleLine="true"
            android:text="1111111111111111111111"
            android:textColor="#fff"
            android:textSize="13sp"
            app:dt_left_drawable="@mipmap/icon_main_video_num"
            app:dt_left_height="14dp"
            app:dt_left_width="14dp" />
    </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>