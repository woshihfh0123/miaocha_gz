<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <RelativeLayout
        android:id="@+id/btn_avatar"
        style="@style/edit_profile_group"
        android:layout_height="wrap_content"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_below="@id/avatar"
            android:layout_marginTop="@dimen/my10dp"
            android:text="点击更换头像"
            android:textColor="@color/gray3"
            android:textSize="@dimen/my14dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/my20dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/user_bg"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_name"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="名字"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_iD"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="渺茶ID号"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_sign"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="简介"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp" android:gravity="right"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:hint="这家伙很懒，什么都没留下"
            android:singleLine="true" android:text="111"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray3"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_sex"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="@string/edit_profile_sex"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:hint="选择"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_birthday"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="@string/edit_profile_birthday"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:hint="选择"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_city"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/right_icon"
            android:text="地区"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp" android:text="请选择"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_impression"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_impression"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>