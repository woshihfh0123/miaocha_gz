<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/my15sp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_tv" android:layout_marginLeft="@dimen/my10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/name_tv"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/address_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginBottom="@dimen/my5dp"
            android:layout_marginTop="@dimen/my10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/my30dp"
                android:layout_height="@dimen/my25dp"
                android:src="@drawable/location_home"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" android:lineSpacingExtra="@dimen/my3dp"
                android:text=""
                android:textColor="@color/textColor2" />
        </LinearLayout>

        <View
            android:id="@+id/divier"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/address_content_layout"
            android:layout_marginTop="10dp"
            android:background="@color/gray2" />


        <ImageView
            android:id="@+id/check_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_below="@id/divier"
            android:layout_marginTop="7dp"
            android:padding="3dp"
            android:src="@drawable/check_normal" />


        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/divier"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:paddingLeft="25dp"
            android:paddingRight="@dimen/my10dp"
            android:text="删除"
            android:textColor="@color/textColor2"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/delete_tv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/check_img"
            android:text="默认地址"
            android:textColor="@color/textColor2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/delete_tv"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/delete_tv"
            android:background="@null"
            android:clickable="true"
            android:paddingLeft="25dp"
            android:paddingRight="@dimen/my10dp"
            android:text="编辑"
            android:textColor="@color/textColor2"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
