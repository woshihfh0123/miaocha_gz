<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/my15sp">

        <RelativeLayout
            android:id="@+id/card_layout01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my70dp">

            <ImageView
                android:layout_width="@dimen/my40dp"
                android:layout_height="@dimen/my40dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/zfb_img1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my55dp"
                android:text="支付宝"
                android:textColor="@color/white"
                android:textSize="@dimen/my16sp" />

            <TextView
                android:id="@+id/card_tv01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="@dimen/my10dp"
                android:gravity="right|center_vertical"
                android:hint="未绑定"
                android:textColor="@color/white"
                android:textColorHint="#ABABAB"
                android:textSize="@dimen/my16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line1" />

        <RelativeLayout
            android:id="@+id/card_layout02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my70dp">

            <ImageView
                android:layout_width="@dimen/my40dp"
                android:layout_height="@dimen/my40dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/yl_img1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my55dp"
                android:text="银行卡"
                android:textColor="@color/white"
                android:textSize="@dimen/my16sp" />

            <TextView
                android:id="@+id/card_tv02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/right_icon"
                android:drawablePadding="@dimen/my10dp"
                android:gravity="right|center_vertical"
                android:hint="未绑定"
                android:textColor="@color/white"
                android:textColorHint="#ABABAB"
                android:textSize="@dimen/my16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line1" />
    </LinearLayout>
</LinearLayout>