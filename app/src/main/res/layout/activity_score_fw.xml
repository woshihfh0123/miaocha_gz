<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/black"
              android:orientation="vertical">

    <include layout="@layout/view_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/my90dp"
                android:background="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/my237dp"
                android:background="@drawable/red_jb_view"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my145dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/my20dp"
            android:layout_marginRight="@dimen/my20dp"
            android:layout_marginTop="@dimen/my15dp"
            android:padding="@dimen/my20dp"
            android:background="@drawable/bj_score">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/my25dp"
                    android:layout_height="@dimen/my25dp"
                    android:src="@drawable/jf_xtb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my14sp"
                    android:paddingLeft="@dimen/my10dp"
                    android:text="我的积分"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my28sp"
                android:paddingLeft="@dimen/my10dp"
                android:layout_marginTop="5dp"
                android:text="20268"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jfmx"
                    android:layout_width="@dimen/my100dp"
                    android:layout_height="@dimen/my35dp"
                    android:gravity="center"
                    android:textSize="@dimen/my14sp"
                    android:layout_marginRight="@dimen/my10dp"
                    android:background="@drawable/white_null"
                    android:text="积分明细"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_jfdd"
                    android:layout_width="@dimen/my100dp"
                    android:layout_height="@dimen/my35dp"
                    android:gravity="center"
                    android:textSize="@dimen/my14sp"
                    android:background="@drawable/white_null"
                    android:text="积分订单"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginLeft="@dimen/my20dp"
            android:layout_marginTop="@dimen/my15dp"
            android:textStyle="bold"
            android:text="热门兑换"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/shape_white_circle"
                    android:layout_marginLeft="@dimen/my15dp"
                    android:layout_marginRight="@dimen/my15dp"
                    android:layout_marginTop="@dimen/my10dp"
                    android:paddingBottom="@dimen/my5dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:layout_marginLeft="@dimen/my20dp"
                android:layout_marginTop="@dimen/my15dp"
                android:textStyle="bold"
                android:text="精选商品"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingLeft="@dimen/my5dp"
                    android:paddingRight="@dimen/my5dp"
                    android:paddingBottom="@dimen/my10dp"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    </LinearLayout> </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>