<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line1" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/my10dp"
                android:paddingRight="@dimen/my10dp">

                <TextView
                    android:layout_width="@dimen/my100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my17sp" />

                <EditText
                    android:id="@+id/upload_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入姓名"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textColor2"
                    android:textSize="@dimen/my15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/my10dp"
                android:paddingRight="@dimen/my10dp">

                <TextView
                    android:layout_width="@dimen/my100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系方式"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my17sp" />

                <EditText
                    android:id="@+id/upload_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入姓名"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textColor2"
                    android:textSize="@dimen/my15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/my10dp"
                android:paddingRight="@dimen/my10dp">

                <TextView
                    android:layout_width="@dimen/my100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="付款类型"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my17sp" />

                <TextView
                    android:id="@+id/upload_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/right_icon"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/my60dp"
                android:layout_marginLeft="@dimen/my10dp"
                android:gravity="center_vertical"
                android:text="上传图片"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/upload_img"
                android:layout_width="@dimen/my150dp"
                android:layout_height="@dimen/my150dp"
                android:layout_marginLeft="@dimen/my15dp"
                android:src="@mipmap/club_create_img1" />

            <TextView
                android:id="@+id/load_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my50dp"
                android:layout_marginTop="@dimen/my100dp"
                android:layout_marginRight="@dimen/my50dp"
                android:background="@drawable/address_submit_bg"
                android:gravity="center"
                android:padding="@dimen/my15dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/my15sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>