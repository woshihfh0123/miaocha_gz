<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_dialog_label_bg"
    android:orientation="vertical">
    
    <TextView 
        android:id="@+id/dialogtitle" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp"  android:gravity="center"
        android:text="取消订单"
        android:textSize="18sp" android:textStyle="bold"
        android:textColor="@color/black" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dip" 
        android:layout_marginLeft="5dp" 
        android:layout_marginRight="5dp"  />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="10dp"
        android:padding="10dp" android:gravity="center_horizontal"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/showmsg"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="确定取消订单？"
            android:textSize="14sp"
        	android:textColor="@color/black" />
        
    </LinearLayout>
<View
	android:layout_width="match_parent"
	android:layout_height="0.5dp" android:background="@color/topic_item_bg"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal" >
        
        <TextView android:padding="10dp"
	        android:id="@+id/confirm" android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  android:gravity="center"
	        android:text="确定 "
	        android:textColor="@color/black"
	        android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" android:background="@color/topic_item_bg"/>
        <TextView
	        android:id="@+id/cancel" android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  android:gravity="center"
	        android:layout_marginLeft="20dp" android:padding="10dp"
	        android:text="先等等"  android:background="@null"
	        android:textColor="@color/redlive"
	        android:textSize="16sp" />
        
    </LinearLayout>    

</LinearLayout>