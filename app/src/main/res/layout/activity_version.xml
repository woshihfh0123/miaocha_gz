<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />
    <com.mc.phonelive.views.MyImageView
        android:layout_width="@dimen/my80dp"
        android:layout_height="@dimen/my80dp"
        app:shape="round"
        app:borderRadius="@dimen/my5dp"
        android:layout_marginTop="@dimen/my20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="渺茶"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/my13dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/my5dp"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/my30dp"
        android:id="@+id/rl_ewm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my50dp"
        android:background="@color/global"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/gray2"
        android:text="客户服务热线（工作日10：00--19：00）"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray1"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/my12dp"
        android:text="400-696-2256"/>
</LinearLayout>


        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my50dp"
        android:background="@color/global"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray2"
            android:text="手机号"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="45655"
            android:gravity="center_vertical|right"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            />




    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my50dp"
        android:background="@color/global"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray2"
            android:text="修改密码"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />


    </RelativeLayout>
</LinearLayout>