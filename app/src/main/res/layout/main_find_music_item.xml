<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp" app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/find_music_img"
            android:layout_width="@dimen/my140dp"
            android:layout_height="@dimen/my140dp"
            android:scaleType="fitXY"
            android:src="@mipmap/find_item_bg" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/find_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长笛"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/find_music_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my16dp"
            android:text="价格：0音豆"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/find_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="产量：0音豆"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/find_music_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="周期：0天"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>