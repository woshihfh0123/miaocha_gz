<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/find_game_img"
            android:layout_width="@dimen/my200dp"
            android:layout_height="@dimen/my140dp"
            android:scaleType="fitXY"
            android:src="@mipmap/find_item_bg" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my80dp"
        android:layout_alignRight="@+id/cardview"
        android:layout_alignBottom="@+id/cardview"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_main_item_bottom" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview"
        android:layout_marginLeft="@dimen/my15dp" android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <com.mc.phonelive.custom.RatioRoundImageView
            android:id="@+id/find_game_avator"
            android:layout_width="@dimen/my35dp"
            android:layout_height="@dimen/my35dp" app:riv_oval="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_avatar_placeholder" />

        <TextView
            android:id="@+id/find_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/find_game_avator"
            android:layout_toRightOf="@+id/find_game_avator"
            android:text="长笛"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/find_game_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_game_name"
            android:layout_toRightOf="@+id/find_game_avator"
            android:text="价格：0音豆"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="normal" />

    </RelativeLayout>
</RelativeLayout>