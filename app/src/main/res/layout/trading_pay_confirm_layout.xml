<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <include layout="@layout/view_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my10dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/home_live_dian"
            android:overScrollMode="always" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="买入方付款信息"
            android:textColor="@color/white"
            android:textSize="@dimen/my17sp"
            android:textStyle="bold" />
    </LinearLayout>
        <android.support.v7.widget.CardView android:layout_marginLeft="@dimen/my30dp"
            android:layout_width="wrap_content" app:cardBackgroundColor="@color/transparent"
            android:layout_height="wrap_content" app:cardCornerRadius="8dp" app:cardElevation="0dp">
        <ImageView android:id="@+id/images"
            android:layout_width="@dimen/my250dp" android:scaleType="fitXY"
            android:layout_height="@dimen/my350dp" android:src="@drawable/default_img"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/load_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my25dp" android:layout_marginRight="@dimen/my25dp"
            android:layout_marginTop="@dimen/my100dp"
            android:background="@drawable/address_submit_bg"
            android:gravity="center"
            android:padding="@dimen/my17dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/my15sp" />
    </LinearLayout>
</LinearLayout>