<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/my75dp"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/my15dp"
    >
<com.mc.phonelive.views.MyImageView
    android:id="@+id/miv"
    android:layout_width="@dimen/my60dp"
    android:layout_height="@dimen/my60dp"
    android:src="@drawable/default_img"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/my10dp"
        >
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my14dp"
            android:textColor="@color/white"
            android:text="增资扩股"/>
        <LinearLayout
            android:layout_marginTop="@dimen/my5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="@dimen/my13dp"
                android:layout_height="@dimen/my13dp"
                android:layout_marginTop="@dimen/my2dp"
                android:src="@mipmap/icon_sex_female_1"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:paddingRight="@dimen/my10dp"
                android:textSize="@dimen/my13dp"
                android:textColor="@color/gray1"
                android:paddingLeft="@dimen/my10dp"
                android:text="襄阳"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:paddingRight="@dimen/my10dp"
            android:textSize="@dimen/my13dp"
            android:textColor="@color/gray1"
            android:text="简介"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tv_status"
        android:layout_width="@dimen/my65dp"
        android:layout_height="@dimen/my30dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_red"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_hg"
            android:layout_width="@dimen/my10dp"
            android:layout_height="@dimen/my10dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/gz_left"/>
        <TextView
         android:id="@+id/tv_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/my12dp"
            android:text="回关"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_yc"
        android:layout_width="@dimen/my30dp"
        android:layout_height="@dimen/my30dp"
        android:padding="@dimen/my7dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/more_ic"/>
</LinearLayout>