<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my5dp"
    android:layout_marginRight="@dimen/my5dp"
    android:layout_marginTop="@dimen/my15dp"
    android:gravity="center"
    >
    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my230dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/my8dp"
        app:cardElevation="@dimen/my0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_img"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_ps_gray"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:paddingRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my14dp"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:text="·"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my12dp"
                    android:textColor="@color/white"
                    android:text="直播中"/>
            </LinearLayout>
<ImageView
    android:id="@+id/iv_gwc"
    android:layout_width="@dimen/my35dp"
    android:layout_height="@dimen/my30dp"
    android:padding="@dimen/my5dp"
    android:layout_alignParentRight="true"
    android:background="@drawable/zb_shape_gwc"
    android:src="@drawable/white_gwc"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wy_mfgk"
        >
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:text="免费观看"
            android:textSize="@dimen/my12dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


    <com.mc.phonelive.views.MyImageView
        android:id="@+id/miv"
        android:layout_width="@dimen/my30dp"
        android:layout_height="@dimen/my30dp"
        app:shape="circle"
        app:borderRadius="0dp"
        android:src="@drawable/wy_1"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/my35dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/my10dp"
        android:text="Peald百度"/>
    <ImageView
        android:layout_width="@dimen/my12dp"
        android:layout_height="@dimen/my12dp"
        android:layout_marginRight="@dimen/my3dp"
        android:src="@drawable/lll_ic"/>
    <TextView
        android:id="@+id/tv_nbs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/my35dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/my12dp"
        android:text="123555"/>
</LinearLayout>
</LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>