<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/my20dp"
    android:paddingRight="@dimen/my20dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/my5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:background="@mipmap/share_bg01"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/my30dp"
                    android:layout_marginTop="@dimen/my170dp"
                    android:layout_marginRight="@dimen/my30dp"
                    android:layout_marginBottom="@dimen/my20dp"
                    android:background="@mipmap/share_bg02"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/share_erweima"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_above="@+id/share_btn"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/default_img" />

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="@dimen/my180dp"
                        android:layout_height="@dimen/my60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/my10dp"
                        android:src="@mipmap/share_bg03" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my75dp"
                android:layout_marginBottom="@dimen/my15dp"
                android:background="@mipmap/share_bg04"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/save_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/my35dp"
                        android:layout_height="@dimen/my35dp"
                        android:src="@mipmap/share_img3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="保存海报"
                        android:textColor="@color/white"
                        android:textSize="@dimen/my13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>