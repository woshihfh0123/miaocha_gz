<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/my75dp"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/my15dp"
    >
<com.mc.phonelive.views.MyImageView
    android:id="@+id/miv"
    android:layout_width="@dimen/my60dp"
    android:layout_height="@dimen/my60dp"
    android:src="@drawable/default_img"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/my10dp"
        >
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my14dp"
            android:textColor="@color/white"
            android:text="增资扩股"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_msg"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:paddingRight="@dimen/my10dp"
            android:textSize="@dimen/my13dp"
            android:textColor="@color/gray1"
            android:text="简介"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_msg"
        android:layout_width="@dimen/my40dp"
        android:layout_height="@dimen/my40dp"
        android:padding="@dimen/my10dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/msg_ic_jr"/>
</LinearLayout>