<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/my100dp"
    android:gravity="top"
    android:layout_marginTop="@dimen/my15dp"
    android:paddingRight="@dimen/my15dp"
    android:paddingLeft="@dimen/my10dp"
    >

        <com.mc.phonelive.views.MyImageView
            android:layout_width="@dimen/my70dp"
            android:layout_height="@dimen/my70dp"
            android:layout_centerInParent="true"
            android:padding="15dp"
            app:borderRadius="0dp"
            android:src="@drawable/default_img"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/my10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="@dimen/my14dp"
                android:text="购物助手"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/my5dp"
                android:gravity="center_vertical">
<ImageView
    android:layout_width="@dimen/my15dp"
    android:layout_height="@dimen/my15dp"
    android:src="@mipmap/icon_sex_female_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/my14dp"
                    android:text="1岁"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/my14dp"
                android:layout_marginLeft="@dimen/my20dp"
                android:text="襄阳"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:layout_marginTop="@dimen/my5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/my12dp"
            android:text="您已成功购买热销产品"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/my70dp"
        android:layout_height="@dimen/my30dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_red"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/my10dp"
            android:layout_height="@dimen/my10dp"
            android:src="@drawable/add_gz"
            android:layout_marginRight="@dimen/my3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my14dp"
            android:textColor="@color/white"
            android:text="关注"/>

    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/my30dp"
        android:layout_height="@dimen/my30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/my10dp"
        android:padding="5dp"
        android:src="@drawable/remove_gz"/>
</LinearLayout>