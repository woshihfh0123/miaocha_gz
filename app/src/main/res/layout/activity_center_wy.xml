<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/my80dp"
    android:orientation="vertical"
    >
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.mc.phonelive.views.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/my80dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my120dp"
            android:background="@color/red"
            android:layout_marginLeft="@dimen/my20dp"
            android:layout_marginRight="@dimen/my20dp"
            android:layout_marginBottom="@dimen/my10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my55dp"
        android:gravity="center"
        android:paddingLeft="@dimen/my20dp"
        android:paddingRight="@dimen/my20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ys"
            android:layout_width="0dp"
            android:layout_height="@dimen/my45dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/my25dp"
            android:background="@drawable/wy_5"
            android:gravity="center"
            android:text="养生"/>
        <TextView
            android:id="@+id/tv_wy"
            android:layout_width="0dp"
            android:layout_height="@dimen/my45dp"
            android:layout_weight="1"
            android:background="@drawable/wy_6"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="问医"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门主播"
        android:textSize="@dimen/my17dp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/my10dp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/my20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_zb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/my10dp"
            android:paddingRight="@dimen/my10dp"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
        </LinearLayout>
    </com.mc.phonelive.views.MyScrollview>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>