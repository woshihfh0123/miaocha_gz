<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/my5dp"
        app:cardElevation="@dimen/my0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:id="@+id/pay_result_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_result_img" />

            <TextView
                android:id="@+id/pay_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/my10dp"
                android:text="购买成功"
                android:textColor="@color/black"
                android:textSize="@dimen/my25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cuntdown_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/my15dp"
        android:layout_marginTop="@dimen/my15dp"
        android:paddingBottom="@dimen/my1dp"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:paddingTop="@dimen/my1dp"
        android:visibility="gone"
        app:isHideTimeBackground="true"
        app:isShowHour="false"
        app:isShowMinute="false"
        app:isShowSecond="true"
        app:isTimeTextBold="false"
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:suffixTextColor="@color/white"
        app:suffixTextSize="@dimen/my12dp"
        app:timeTextColor="@color/white"
        app:timeTextSize="@dimen/my14dp" />
</RelativeLayout>