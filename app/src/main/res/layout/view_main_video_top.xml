<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my65dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/btn_zb"
        android:layout_width="@dimen/my40dp"
        android:layout_height="@dimen/my40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/my10dp"
        android:onClick="mainClick"
        android:padding="@dimen/my8dp"
        android:src="@drawable/home_zb" />

    <com.mc.phonelive.custom.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="180dp"
        android:layout_height="@dimen/my38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/my3dp"
        app:bold="true"
        app:change_size="true"
        app:currentItem="2"
        app:indicatorColor="@color/white"
        app:indicatorHeight="@dimen/my2dp"
        app:indicatorWidth="22dp"
        app:lightColor="@color/white"
        app:normalColor="@color/gray1"
        app:title_textSize="@dimen/my15dp"
        app:visibleItemCount="3" />

    <TextView
        android:id="@+id/btn_msg"
        android:layout_width="@dimen/my48dp"
        android:layout_height="@dimen/my40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/my3dp"
        android:layout_toLeftOf="@id/btn_search"
        android:gravity="center"
        android:onClick="mainClick"
        android:textColor="@color/white"
        android:textSize="@dimen/my15dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="@dimen/my40dp"
        android:layout_height="@dimen/my40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/my10dp"
        android:onClick="mainClick"
        android:padding="@dimen/my8dp"
        android:src="@drawable/home_sq" />

</RelativeLayout>