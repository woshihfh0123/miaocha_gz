<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/my10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/my40dp"
            android:layout_height="@dimen/my40dp"
            android:padding="@dimen/my10dp"
            android:src="@drawable/check_u"/>
        <com.mc.phonelive.views.MyImageView
            android:id="@+id/miv"
            android:layout_width="@dimen/my75dp"
            android:layout_height="@dimen/my75dp"
            android:layout_centerInParent="true"
            android:padding="15dp"
            app:borderRadius="@dimen/my5dp"
            app:shape="round"
            android:src="@drawable/default_img"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/my75dp"
            android:paddingLeft="@dimen/my10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#222222"
                android:lineSpacingMultiplier="1.1"
                android:gravity="top"
                android:maxLines="2"
                android:textStyle="bold"
                android:textSize="@dimen/my14dp"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="@dimen/my16dp"
                    />
                <TextView
                    android:id="@+id/tv_ord_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my15dp"
                    android:text="sdfsdf"
                    android:visibility="gone"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/my16dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#F5F5F5"/>
</LinearLayout>