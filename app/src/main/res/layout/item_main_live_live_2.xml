<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp" android:layout_marginTop="5dp">
<com.mc.phonelive.custom.HomeListItemLayout
    android:layout_width="match_parent" android:id="@+id/hot_live_layout"
    android:layout_height="0dp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        />

    <com.mc.phonelive.custom.RatioRoundImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/bg_main_item_bottom"
        app:ri_ratio="0.5"
        app:riv_corner_radius_bottom_left="5dp"
        app:riv_corner_radius_bottom_right="5dp"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        />

    <com.mc.phonelive.custom.DrawableTextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/avatar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="13sp"
        app:dt_left_drawable="@mipmap/icon_main_live_num"
        app:dt_left_height="14dp"
        app:dt_left_width="14dp"
        />


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/num"
        android:layout_toRightOf="@id/avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/type"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_above="@id/title"
        android:layout_marginLeft="6dp"
        android:scaleType="fitXY"
        />
    <ImageView android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_gwc"/>
</com.mc.phonelive.custom.HomeListItemLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/adv_num"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:background="@mipmap/live_goods_first_bg"
            android:gravity="center"
            android:text="0件\n直播购"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/live_goods_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>