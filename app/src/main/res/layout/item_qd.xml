<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/my60dp"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <View
            android:id="@+id/iv_yqd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="6dp"
            android:background="#fd2c55"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/view_zw"
            android:layout_width="@dimen/my14dp"
            android:layout_height="6dp"
            android:visibility="gone"
            android:background="#FFC9D3"/>
    </LinearLayout>

<TextView
    android:id="@+id/tv_ard"
    android:layout_width="@dimen/my18dp"
    android:layout_height="@dimen/my18dp"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:text="1"
    android:textColor="@color/white"
    android:visibility="gone"
    android:textSize="@dimen/my10dp"
    android:gravity="center"
    android:background="@drawable/shape_red_circle"/>
    <ImageView
        android:id="@+id/iv_dq"
        android:layout_width="@dimen/my28dp"
        android:layout_height="@dimen/my42dp"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/my10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/qd_03"/>

</RelativeLayout>