<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/my10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/home_live_dian"
                        android:overScrollMode="always" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="卖家支付宝"
                        android:textColor="@color/white"
                        android:textSize="@dimen/my17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:layout_marginTop="@dimen/my10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款人"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/zfb_usename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/my50dp"
                            android:text="收款人"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝号"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/zfb_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/my35dp"
                            android:text="000000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款号"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/buy_lookimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/my50dp"
                            android:text="点击查看大图"
                            android:textColor="@color/yellow1"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                    <ImageView android:id="@+id/zfb_img"
                        android:layout_width="@dimen/my120dp"
                        android:layout_height="@dimen/my150dp"
                        android:layout_marginLeft="@dimen/my80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_img" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/my10dp"
                android:background="#222534" />

            <LinearLayout
                android:id="@+id/layout02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/my10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/home_live_dian"
                        android:overScrollMode="always" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="卖家银行卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/my17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my10dp"
                    android:layout_marginTop="@dimen/my10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="收款人"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/yl_usename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款人"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="收款银行"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/yl_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="银行卡号"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/my13sp" />

                        <TextView
                            android:id="@+id/yl_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00000000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my13sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#222534" />

            <LinearLayout android:id="@+id/load_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/my10dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/home_live_dian"
                        android:overScrollMode="always" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="上传图片"
                        android:textColor="@color/white"
                        android:textSize="@dimen/my17sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/upload_img"
                    android:layout_width="@dimen/my150dp"
                    android:layout_height="@dimen/my150dp"
                    android:layout_marginLeft="@dimen/my20dp"
                    android:src="@mipmap/club_create_img1" />



                <TextView
                    android:id="@+id/load_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/my25dp"
                    android:background="@drawable/address_submit_bg"
                    android:gravity="center"
                    android:padding="@dimen/my15dp"
                    android:text="立即上传"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my15sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>