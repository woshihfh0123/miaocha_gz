<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/my15dp"
    android:paddingRight="@dimen/my15dp"
    android:paddingTop="@dimen/my13dp"
    android:gravity="center"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/my5dp"
                    android:visibility="gone"
                    android:text="置顶"
                    android:background="@drawable/zj_red_status_shape"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="@dimen/my3dp"
                    android:paddingRight="@dimen/my3dp"
                    android:textSize="@dimen/my12dp"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="top"
                    android:text="家装设计师"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/my14dp"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="4000-8000"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/my13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/my5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_yq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="三年以上工作经验"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorHightGray"
                    android:textSize="@dimen/my13dp"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2019-12-10"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorHightGray"
                    android:textSize="@dimen/my13dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop"
                android:layout_marginTop="@dimen/my5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="湖北欧亚达建材市场"
                android:gravity="center_vertical"
                android:textColor="@color/colorHightGray"
                android:textSize="@dimen/my13dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my5dp"
                >
                <com.bs.xyplibs.view.FlowLayout

                    android:id="@+id/flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    <View
        style="@style/title_bottom_line_style"
      android:layout_marginTop="@dimen/my15dp"/>

</LinearLayout>