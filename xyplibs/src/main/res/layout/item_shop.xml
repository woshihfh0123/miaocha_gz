<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    android:background="@color/white"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my110dp"
            android:padding="@dimen/my5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/my110dp"
                android:layout_height="@dimen/my90dp"
                android:layout_marginRight="@dimen/my10dp"
                android:layout_marginLeft="@dimen/my5dp"

                android:src="@drawable/base_photo_def"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/my15dp"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:text="五福与否"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/my12dp"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/my20dp"
                        android:layout_weight="1"
                        android:text="20分钟送达"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/my10dp"
                    android:orientation="horizontal">
                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/ratingBar_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.01"
                        android:minHeight="12dp"
                        app:mrb_progressTint="@color/colorOrg"
                        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/my12dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/my5dp"
                        android:textColor="@color/colorBlack"
                        android:text="老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费老说法就是浪费"/>
<ImageView
    android:layout_width="@dimen/my15dp"
    android:layout_height="@dimen/my15dp"
    android:src="@drawable/write_go"
    android:tint="@color/colorGray"/>
                </LinearLayout>
               <TextView
                   android:id="@+id/tv_info"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBlack"
                   android:textSize="@dimen/my12dp"
                   android:text="15fdds"/>
            </LinearLayout>
        </LinearLayout>
    <View
        style="@style/title_bottom_line_style"
        android:layout_marginLeft="@dimen/my10dp"/>

</LinearLayout>