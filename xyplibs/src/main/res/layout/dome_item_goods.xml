<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jmf="http://schemas.android.com/apk/res-auto"
    xmlns:qinc="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/size_level3"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/size_level3"
    android:paddingTop="@dimen/size_level3"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_item_cascade_goods_name"
        style="@style/MatchWrap"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="商品11"/>
    <TextView
        android:id="@+id/tv_gys"
        android:paddingTop="5dp"
        style="@style/MatchWrap"
        android:singleLine="true"
        android:textColor="@color/colorGray"
        android:text="供应商：老五汽配"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_gg"
        android:paddingTop="5dp"
        style="@style/MatchWrap"
        android:textColor="@color/colorGray"
        android:text="规格：170-24实心"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:textSize="14sp"
        />
    <LinearLayout
        android:paddingTop="5dp"
        style="@style/MatchWrap"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_pz"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:text="品质：原厂"

        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_kc"
        style="@style/MatchWrap"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/colorGray"
        android:gravity="center"
        android:singleLine="true"
        android:text="库存：20"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        />
    </LinearLayout>
    <RelativeLayout
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:textColor="@color/colorWhite"
        android:text="¥0"
        android:gravity="center|center"
        android:background="@drawable/org_shape"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        />
        <com.bs.xyplibs.AddSubUtils.AddSubUtils
            android:id="@+id/add_sub"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            jmf:contentTextColor="@color/colorOrg"
           />
    </RelativeLayout>

</LinearLayout>