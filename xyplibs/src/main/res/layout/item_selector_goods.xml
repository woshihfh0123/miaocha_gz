<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
 android:paddingTop="@dimen/my10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp"
        android:orientation="horizontal">


    <com.bs.xyplibs.view.MyImageView
        android:id="@+id/miv"
        android:layout_width="@dimen/my50dp"
        android:layout_height="@dimen/my50dp"
        app:shape="round"
        app:borderRadius="@dimen/my5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/my50dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:minHeight="@dimen/my25dp"
            android:textSize="@dimen/my13dp"
            android:textColor="@color/colorBlack"
            android:gravity="top"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_marginTop="@dimen/my5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/my20dp"
            android:textSize="@dimen/my12dp"
            android:textColor="@color/colorGray"
            android:gravity="bottom"/>
    </LinearLayout>
    </LinearLayout>
    <View
       style="@style/title_bottom_line_style"
        android:layout_marginTop="@dimen/my10dp"/>
</LinearLayout>