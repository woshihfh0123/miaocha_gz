<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:gravity="center"
    android:text="选择支付方式"
    android:layout_gravity="center_horizontal"/>
    <View
      style="@style/tab_five_diver_view"
        android:layout_margin="0dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pay_layout_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/weixin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐安装微信5.0以上版本的使用"
                android:textColor="@color/colorGray"/>
        </LinearLayout>

        <com.rey.material.widget.CheckBox
            android:id="@+id/pay_cb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CheckBoxStyle"
            android:gravity="center"/>
    </LinearLayout>
    <View
        style="@style/tab_five_diver_view"
        android:layout_margin="0dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pay_layout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:visibility="visible"
        android:padding="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/zhifubao"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐有支付宝账号的用户使用"
                android:textColor="@color/colorGray"/>
        </LinearLayout>

        <com.rey.material.widget.CheckBox
            android:id="@+id/pay_cb_1"
            style="@style/CheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>

    <View
        style="@style/tab_five_diver_view"
        android:layout_margin="0dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pay_layout_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/zhifubao"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翼支付"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐翼支付用户使用"
                android:textColor="@color/colorGray"/>
        </LinearLayout>

        <com.rey.material.widget.CheckBox
            android:id="@+id/pay_cb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CheckBoxStyle"
            android:gravity="center"/>
    </LinearLayout>
    <View
        style="@style/tab_five_diver_view"
        android:layout_margin="0dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:gravity="bottom"
        android:textColor="@color/colorAccent"
        android:text="6.00"/>
    <TextView
        android:layout_toRightOf="@id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12dp"
       android:gravity="bottom"
        android:paddingBottom="5dp"
        android:textColor="@color/colorOrg"
        android:text="元"/>
</LinearLayout>
    <com.rey.material.widget.Button
        android:id="@+id/commit_bt"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dp"
        android:text="确认支付"
        android:background="@drawable/bt_shape"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:rd_enable="true"/>
</LinearLayout>
