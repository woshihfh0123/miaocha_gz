<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_centerInParent="true"
    android:paddingBottom="20dp">
    <TextView
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认地址"
        android:background="@drawable/bt_zj_black"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        />

</RelativeLayout>

    <EditText
        android:visibility="gone"
        android:id="@+id/et_name1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1233"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bt_zj_gray"
        android:paddingLeft="10dp"/>
    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/refreshicon"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        />
    <com.bs.xyplibs.view.ClearEditText
        android:id="@+id/tv_serch"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/rl_video_back"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:maxLength="10"
        android:drawableRight="@drawable/msg_icon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/write_org_shape"
        android:hint="关键字搜索"
        android:textColor="#999999"
        android:textSize="13sp"/>
    <ListView
        android:layout_below="@id/tv_serch"
        android:id="@+id/recommend_list"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_marginBottom="100dp">
    </ListView>


    <!--返回键-->
    <RelativeLayout
        android:id="@+id/rl_video_back"
        android:layout_width="@dimen/my30dp"
        android:layout_height="@dimen/my30dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:layout_marginTop="@dimen/my40dp"
        android:background="@drawable/video_music_switch_back"
        android:gravity="center"
        android:paddingLeft="@dimen/my10dp"
        android:paddingRight="@dimen/my10dp">

        <ImageView
            android:src="@drawable/back_jiantou"
            android:id="@+id/iv_left"
            android:layout_width="@dimen/my25dp"
            android:layout_height="@dimen/my25dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


</RelativeLayout>