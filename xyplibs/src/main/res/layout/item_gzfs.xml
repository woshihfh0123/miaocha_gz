<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/my15dp"

    >
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingRight="@dimen/my15dp"
        android:layout_width="match_parent" android:layout_height="@dimen/my65dp">

        <com.bs.xyplibs.view.MyImageView
            android:id="@+id/miv"
            android:layout_width="@dimen/my45dp"
            android:layout_height="@dimen/my45dp"
            android:src="@drawable/img_default" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/my14dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#A8A8A8"
                android:textSize="@dimen/my13dp" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_status"
            android:layout_width="@dimen/my80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/gray_zj_high_shape"
            android:text="123"
            android:textColor="@color/colorWhite"
            android:textSize="13dp" />
        <!--    </LinearLayout>-->

    </LinearLayout>

    <View
        style="@style/title_bottom_line_style"
       />

</LinearLayout>