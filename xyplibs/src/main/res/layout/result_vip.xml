<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingBottom="10dp">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/getvip"
        android:scaleType="centerInside"
         />
    <LinearLayout
        android:id="@+id/ll_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:layout_marginTop="@dimen/my90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/my25dp"
            android:text="领取成功"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="@dimen/my10dp"
            android:layout_width="@dimen/my250dp"
            android:layout_height="@dimen/my250dp"

            android:layout_gravity="center"
            android:src="@drawable/vip_nr"
            />
        <Button
            android:id="@+id/bt_submit"
            android:text="立即领取"
            android:textSize="@dimen/my15dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/org_shape"
            style="@style/button_all_style"
            android:layout_marginLeft="@dimen/my15dp"
            android:layout_marginRight="@dimen/my15dp"
            android:layout_below="@id/ll_iv"
            android:layout_marginTop="@dimen/my10dp"
            />
    </LinearLayout>
</FrameLayout>








<ImageView
    android:id="@+id/iv_cancel"
    android:layout_width="@dimen/my35dp"
    android:layout_height="@dimen/my35dp"
    android:src="@drawable/gb_t"
    android:layout_marginTop="@dimen/my30dp"/>
</LinearLayout>